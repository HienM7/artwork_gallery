<%= form_for resource,
    as: resource_name,
    url: registration_path(resource_name),
    html: { method: :put } do |form| %>

    <hr>

    <div class="form-group row m-t-20">
        <%= form.label :name, class: 'col-md-2 col-form-label' %>
        <div class="col-md-10">
            <%= form.text_field :username,
                class: 'form-control',
                placeholder: "User name",
                required: true %>
            <div class="invalid-feedback">
            User name must have length of 1 to 100 characters.
            </div>
        </div>
    </div>

    <div class="form-group row">
        <%= form.label :email, class: 'col-md-2 col-form-label' %>
        <div class="col-md-10">
            <%= form.email_field :email,
                class: 'form-control',
                placeholder: "Your email",
                required: true %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-warning">Currently waiting confirmation for <%= resource.unconfirmed_email %></div>
        <% end %>
    </div>

    <div class="form-group row m-t-20">
        <%= form.label :credit_card, class: 'col-md-2 col-form-label' %>
        <div class="col-md-10">
            <%= form.text_field :credit_card,
                class: 'form-control',
                placeholder: "Credit card number",
                required: true %>
            <div class="invalid-feedback">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <%= form.label :password, class: 'col-md-2 col-form-label' %>
        <div class="col-md-10">
            <%= form.password_field :password,
                class: 'form-control',
                autocomplete: 'off',
                placeholder: "Password" %>
        </div>
    </div>

    <div class="form-group row">
        <%= form.label :confirmation, class: 'col-md-2 col-form-label' %>
        <div class="col-md-10">
            <%= form.password_field :password_confirmation,
                class: 'form-control',
                autocomplete: 'off',
                placeholder: "Retype the password here" %>
        </div>
    </div>

    <div class="form-group row">
        <%= form.label :current_password, class: 'col-md-2 col-form-label' %>
        <div class="col-md-10">
            <%= form.password_field :current_password,
                class: 'form-control',
                autocomplete: 'off',
                placeholder: "Your current password" %>
        </div>
    </div>

    <%#= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row">
        <label class="col-md-2 col-form-label"></label>
        <div class="col-md-10">
            <div class="actions">
                <%= form.submit class: 'btn btn-success m-r-20' %>
                <%= link_to 'View my profile',
                    my_profile_path,
                    class: "btn btn-secondary" %>
            </div>
        </div>
    </div>

<% end %>
