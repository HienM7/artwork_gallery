<%= form_with(
      model: [:admin, @user],
      local: true,
      html: {class: "form needs-validation", novalidate: true}
    ) do |form| %>

    <hr>

    <div class="form-group row m-t-20">
        <%= form.label :name, class: 'col-md-2 col-form-label' %>
        <div class="col-md-10">
            <%= form.text_field :username,
                class: 'form-control',
                placeholder: "User name",
                required: true %>
            <div class="invalid-feedback">
            User name must have length of 1 to 100 characters.
            </div>
        </div>
    </div>

    <div class="form-group row">
        <%= form.label :password, class: 'col-md-2 col-form-label' %>
        <div class="col-md-10">
            <%= form.password_field :password,
                class: 'form-control',
                autocomplete: 'off',
                placeholder: "Password" %>
        </div>
    </div>

    <div class="form-group row">
        <%= form.label :password, class: 'col-md-2 col-form-label' %>
        <div class="col-md-10">
            <%= form.password_field :password_confirmation,
                class: 'form-control',
                autocomplete: 'off',
                placeholder: "Retype the password here" %>
        </div>
    </div>

    <div class="form-group row">
        <%= form.label :point, class: 'col-md-2 col-form-label' %>
        <div class="col-md-10">
            <%= form.text_field :point,
                class: 'form-control',
                placeholder: "User's points",
                required: true %>
        </div>
    </div>

    <div class="form-group row">
        <%= form.label :email, class: 'col-md-2 col-form-label' %>
        <div class="col-md-10">
            <%= form.email_field :email,
                class: 'form-control',
                placeholder: "Email",
                required: true %>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-2 col-form-label"></label>
        <div class="col-md-10">
            <div class="actions">
                <%= form.submit class: 'btn btn-success m-r-20' %>
                <%= link_to 'View user list',
                    admin_users_path,
                    class: "btn btn-secondary" %>
            </div>
        </div>
    </div>

<% end %>
