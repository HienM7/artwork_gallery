<%= form_with(
      model: category,
      local: true,
      html: {class: "needs-validation", novalidate: true}
    ) do |form| %>

    <hr>

    <div class="form-group row m-t-20">
        <%= form.label :name, class: 'col-md-2 col-form-label' %>
        <div class="col-md-10">
            <%= form.text_field :name,
                class: 'form-control',
                placeholder: "Category name",
                required: true %>
            <div class="invalid-feedback">
            Category name must have length of 1 to 100 characters.
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-2 col-form-label"></label>
        <div class="col-md-10">
            <div class="actions">
                <%= form.submit class: 'btn btn-success m-r-20' %>
                <%= link_to 'View category list',
                    categories_path,
                    class: "btn btn-secondary" %>
            </div>
        </div>
    </div>

<% end %>
