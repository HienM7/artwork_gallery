<style>
  .el-element-overlay .el-card-item {
    padding-bottom: 0;
  }
  .test-title {
    line-height: 1.5em;
    height: 3em;
    overflow: hidden;
    width: 100%;
  }
</style>

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Public Gallery</h3>
    </div>
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item">Artwork</li>
            <li class="breadcrumb-item active">List</li>
        </ol>
    </div>
    <div>
        <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10">
          <i class="ti-settings text-white"></i>
        </button>
    </div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
  <div class="row m-t-40">
    <div class="col-md-12">
        <h4 class="m-b-0">All Artworks</h4>
        <p class="text-muted m-t-0 font-12">Explore plenty of artworks!</p>
    </div>
  </div>
    
  <div class="card-columns el-element-overlay">
    
    <% @artworks.each do |artwork| %>

    <div class="card">
      <div class="el-card-item">
        <div class="el-card-avatar el-overlay-1">
          <%= link_to  artwork_path(artwork),
              class: 'image-popup-vertical-fit' do %>
            <%= image_tag  artwork.img_link,
                           alt: 'Oops!',
                           loading: 'lazy' %>
          <% end %>
          <div class="el-overlay">
            <ul class="el-info">
              <li>
                <%= link_to  artwork_path(artwork) do %>
                  <%= artwork.name %>
                  <i class="icon-link"></i>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    
    <% end %>

  </div>
</div>


