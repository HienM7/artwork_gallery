<%= stylesheet_link_tag "css/style" %>
<style>
  .el-element-overlay .el-card-item {
    padding-bottom: 0;
  }
  .test-title {
    line-height: 1.5em;
    height: 3em;
    overflow: hidden;
    width: 100%;
  }
</style>

<div class="row page-titles">
    <!-- Page inner title -->
    <div class="col-md-2 align-self-center">
        <h3 class="text-themecolor">Public Gallery</h3>
    </div>
    <!-- Search form -->
    <div class="col-md-6 align-self-center">
        <div class="md-form active-pink active-pink-2 mt-0">
          <%= form_with  url: artworks_path,
                         method: 'get',
                         local: true do |form| %>
            <%= form.text_field :keyword,
                class: 'form-control',
                placeholder: "Search",
                value: params[:keyword],
                aria_label: "Search" %>
          <% end %>
        </div>
    </div>
    <!-- Bread crumb -->
    <div class="col-md-4 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item">Artwork</li>
            <li class="breadcrumb-item active">List</li>
        </ol>
    </div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
    <!-- Row -->
    <div class="row el-element-overlay">
      <div class="col-md-12">
          <h4 class="m-b-0">All Artworks</h4>
          <p class="text-muted m-t-0 font-12">Explore plenty of artworks!</p>
      </div>
      
      <% @artworks.each do |artwork| %>
      
      <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12 col-xs-12" style="display: flex">
            <%# <div class="card-deck"> %>
              <div class="card">
                  <div class="el-card-item box-container">
                      <div class="el-card-avatar el-overlay-1">
                          <%= image_tag  artwork.img_link,
                                         class: 'card-img-top',
                                         style: 'width: 100%; height: 160px !important',
                                         alt: 'Oops!',
                                         loading: 'lazy' %>

                          <div class="el-overlay">
                              <ul class="el-info">
                                  <li>
                                    <%= link_to  artwork_path(artwork) do %>
                                      <%= artwork.name %>
                                      <i class="icon-link"></i>
                                    <% end %>
                                  </li>
                              </ul>
                          </div>
                      </div>

                      <div class="card-body box-container">
                          <div>
                              <h4 class="test-title">
                                <%= link_to  artwork.name, artwork_path(artwork) %>
                                <%# limit_text(artwork.title, 50) %>
                              </h4>
                          </div>
                      </div>
                  </div>
              </div>
            <%# </div> %>
      </div>
      
      <% end %>
    </div>
    <!-- End Row -->
</div>


