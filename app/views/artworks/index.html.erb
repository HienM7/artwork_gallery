<% content_for :header do %>
<div class="row page-titles">
    <!-- Page inner title -->
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Public Gallery</h3>
    </div>
    <!-- Bread crumb -->
    <div class="col-md-7 align-self-center">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item">Artwork</li>
            <li class="breadcrumb-item active">List</li>
        </ol>
    </div>
</div>
<% end %>


<% content_for :alert do %>
  <div class="row">
    <div class="col-12">
      <% flash.each do |type, msg| %>
        <% if type == 'notice' %>
          <div class="alert alert-success">
            <%= msg %>
          </div>
        <% elsif type == 'alert' %>
          <div class="alert alert-danger">
            <%= msg %>
          </div>
        <% else %>
          <div class="alert alert-warning">
            <%= msg %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>


  <div class="row">
    <div class="col-md-12">
        <h4 class="m-b-0">All Artworks</h4>
        <p class="text-muted m-t-0 font-12">Explore plenty of artworks!</p>
    </div>
  </div>

  <%= render "gallery", artworks: @artworks %>


<% content_for :scripts do %>
  <script>
    $(document).ready(function() {
    // Select and loop the container element of the elements you want to equalise
      $('.box-container').each(function() {
        // Cache the highest
        var highestBox = 0;
        // Select and loop the elements you want to equalise
        $('.box-column', this).each(function() {
          // If this box is higher than the cached highest then store it
          if ($(this).height() > highestBox) {
            highestBox = $(this).height();
          }
        });
        // Set the height of all those children to whichever was highest
        $('.box-column', this).height(highestBox);
      });
    });
  </script>
<% end %>
